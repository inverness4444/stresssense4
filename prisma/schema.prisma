generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  HR
  Manager
  Employee
}

enum TeamStatus {
  Calm
  Watch
  UnderPressure
  AtRisk
}

enum QuestionType {
  Scale1_5
  Scale0_10
  SingleChoice
}

enum QuestionDimension {
  stress
  engagement
  psych_safety
  workload
  recognition
  clarity
  other
}

enum Audience {
  manager
  team
  employee
}

enum NudgeStatus {
  todo
  planned
  done
  snoozed
}

enum NudgeSource {
  rule
  ai
  manual
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  role         UserRole
  organization Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  members      Member[]
  surveyRuns   SurveyRun[] @relation("SurveyRunLaunchedBy")
  userTeams    UserTeam[]
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  users     User[]
  teams     Team[]
  members   Member[]
  surveyTemplates SurveyTemplate[]
  surveyRuns SurveyRun[]
  nudges    NudgeInstance[]
}

model Team {
  id              String     @id @default(cuid())
  name            String
  description     String?
  memberCount     Int        @default(0)
  stressIndex     Float      @default(0)
  engagementScore Float      @default(0)
  participation   Float      @default(0)
  status          TeamStatus @default(Watch)
  lastPulseAt     DateTime?
  createdAt       DateTime   @default(now())
  organization    Organization @relation(fields: [organizationId], references: [id])
  organizationId  String
  members         Member[]
  surveyRuns      SurveyRun[]
  metricsHistory  TeamMetricsHistory[]
  nudges          NudgeInstance[]
  users           UserTeam[]
}

model Member {
  id          String   @id @default(cuid())
  displayName String
  role        UserRole
  email       String
  avatarUrl   String?
  lastSeenAt  DateTime?
  organization Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  team        Team     @relation(fields: [teamId], references: [id])
  teamId      String
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  surveyResponses SurveyResponse[]
  metrics     EmployeeMetrics?
  nudges      NudgeInstance[]
}

model SurveyTemplate {
  id          String   @id @default(cuid())
  orgId       String?
  organization Organization? @relation(fields: [orgId], references: [id])
  title       String
  description String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  questions   SurveyQuestion[]
  runs        SurveyRun[]
}

model SurveyQuestion {
  id         String   @id @default(cuid())
  template   SurveyTemplate @relation(fields: [templateId], references: [id])
  templateId String
  order      Int
  text       String
  type       QuestionType
  dimension  QuestionDimension
  choices    Json?
}

model SurveyRun {
  id               String   @id @default(cuid())
  orgId            String
  organization     Organization @relation(fields: [orgId], references: [id])
  team             Team?    @relation(fields: [teamId], references: [id])
  teamId           String?
  template         SurveyTemplate @relation(fields: [templateId], references: [id])
  templateId       String
  title            String
  launchedBy       User     @relation("SurveyRunLaunchedBy", fields: [launchedByUserId], references: [id])
  launchedByUserId String
  launchedAt       DateTime @default(now())
  targetCount      Int      @default(0)
  completedCount   Int      @default(0)
  avgStressIndex   Float?
  avgEngagementScore Float?
  tags             Json?
  responses        SurveyResponse[]
}

model SurveyResponse {
  id             String   @id @default(cuid())
  run            SurveyRun @relation(fields: [runId], references: [id])
  runId          String
  member         Member?  @relation(fields: [memberId], references: [id])
  memberId       String?
  respondentEmail String?
  submittedAt    DateTime @default(now())
  answers        Json
}

model EmployeeMetrics {
  id              String   @id @default(cuid())
  member          Member   @relation(fields: [memberId], references: [id])
  memberId        String   @unique
  lastStressIndex Float?
  wellbeing       Float?
  mood            Int?
  habitsCompletion Float?
  lastUpdatedAt   DateTime @default(now())
}

model TeamMetricsHistory {
  id              String   @id @default(cuid())
  team            Team     @relation(fields: [teamId], references: [id])
  teamId          String
  periodLabel     String
  stressIndex     Float
  engagementScore Float
  participation   Float
  tags            Json?
  createdAt       DateTime @default(now())
}

model NudgeTemplate {
  id                String     @id @default(cuid())
  slug              String     @unique
  title             String
  description       String
  audience          Audience
  triggerLevel      TeamStatus
  triggerTags       Json
  estimatedEffort   String
  estimatedImpact   String
  recommendedChannel Json
  createdAt         DateTime   @default(now())
}

model NudgeInstance {
  id          String       @id @default(cuid())
  org         Organization @relation(fields: [orgId], references: [id])
  orgId       String
  team        Team         @relation(fields: [teamId], references: [id])
  teamId      String
  member      Member?      @relation(fields: [memberId], references: [id])
  memberId    String?
  template    NudgeTemplate @relation(fields: [templateId], references: [id])
  templateId  String
  status      NudgeStatus  @default(todo)
  source      NudgeSource  @default(rule)
  notes       String?
  tags        Json?
  createdAt   DateTime     @default(now())
  dueAt       DateTime?
  resolvedAt  DateTime?
}

model UserTeam {
  userId String
  teamId String
  user   User @relation(fields: [userId], references: [id])
  team   Team @relation(fields: [teamId], references: [id])

  @@id([userId, teamId])
}

model ActionCenterItem {
  id             String   @id @default(cuid())
  organizationId String
  teamId         String?
  userId         String?
  type           String
  title          String
  description    String?
  status         String   @default("open")
  dueAt          DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
